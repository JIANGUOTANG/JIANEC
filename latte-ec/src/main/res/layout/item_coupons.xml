<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:padding="10dp"
    >
    <yyydjk.com.library.CouponView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/couponView"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="76dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp"
        app:cv_dash_line_color="@android:color/white"
        app:cv_dash_line_gap="5dp"
        app:cv_dash_line_height="0.8dp"
        app:cv_dash_line_length="10dp"
        app:cv_dash_line_margin_bottom="5dp"
        app:cv_semicircle_color="@color/bg_common_gray"
        app:cv_semicircle_gap="4dp"
        app:cv_is_semicircle_top="false"
        app:cv_is_semicircle_bottom="false"
        app:cv_is_semicircle_right="true"
        app:cv_is_dash_line_left="false"
        app:cv_is_dash_line_right="false"
        app:cv_semicircle_radius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_coupon"
                tools:ignore="VectorDrawableCompat" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满100减40"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="20sp"
                android:textColor="@color/liji_material_red_500"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </yyydjk.com.library.CouponView>
    <yyydjk.com.library.CouponView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="76dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp"
        app:cv_dash_line_color="@android:color/white"
        app:cv_dash_line_gap="5dp"
        app:cv_dash_line_height="0.8dp"
        app:cv_dash_line_length="10dp"
        app:cv_is_semicircle_top="false"
        app:cv_is_semicircle_bottom="false"
        app:cv_is_semicircle_left="true"
        app:cv_is_dash_line_left="false"
        app:cv_is_dash_line_right="false"
        app:cv_dash_line_margin_top="8dp"
        app:cv_semicircle_color="@color/bg_common_gray"
        app:cv_semicircle_gap="4dp"
        app:cv_semicircle_radius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:background="@drawable/bt_press"
                android:text="领取"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </yyydjk.com.library.CouponView>
</LinearLayout>